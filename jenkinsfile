pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven/apache-maven-3.5.4/bin:$PATH"
    }
    stages{
      stage('Git checkout'){
         steps{
            git credentialsId: '9507d743-9fd7-4075-b118-7b5d0f74b55b', url: 'https://github.com/yogesh20-10/hello-world.git'
         }
      }
      stage("maven Build"){
         steps{
            sh "mvn clean package"
            sh "mv /var/lib/jenkins/workspace/declarative_pipeline/webapp/target/*.war /var/lib/jenkins/workspace/declarative_pipeline/webapp/target/webapp2.war"
         }
     }
     stage("deploy-dev"){
         steps{
            sshagent(['tomcat']){
            sh """
                scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/declarative_pipeline/webapp/target/webapp2.war 172.31.109.5:/opt/apache-tomcat-8.5.56/webapps/'
                ssh cloud_user@172.31.109.5 /opt/apache-tomcat-8.5.56/bin/shutdown.sh
                ssh cloud_user@172.31.109.5 /opt/apache-tomcat-8.5.56/bin/startup.sh
              
              """
               }
          }
   }
   
 }
 
}
