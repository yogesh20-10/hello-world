pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven/apache-maven-3.6.3/bin:$PATH"
    }
    stages{
      stage('Git checkout'){
         steps{
            git credentialsId: '9507d743-9fd7-4075-b118-7b5d0f74b55b', url: 'https://github.com/yogesh20-10/hello-world.git'
         }
      }
      stage("maven Build"){
         steps{
            sh "mvn clean package"
            sh "mv target/*.war target/webapp.war"
         }
     }
     stage("deploy-dev"){
         steps{
            sshagent(['tomcat-new']) {
            sh """
                scp -o StrictHostKeyChecking=no target/myweb.war cloud_user@172.31.109.5:/opt/apache-tomcat-8.5.56/webapps/
                ssh cloud_user@172.31.109.5 /opt/apache-tomcat-8.5.56/bin/shutdown.sh
                ssh cloud_user@172.31.109.5 /opt/apache-tomcat-8.5.56/bin/startup.sh
              
              """
               }
          }
   }
   
 }
 
}
